{
  "name": "@koniz-dev/canvaslens",
  "version": "0.0.1",
  "description": "A powerful HTML5 Canvas-based image viewing and annotation library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "node dev/scripts/dev/start.js",
    "build": "npm run clean && tsc && npm run fix-imports",
    "build:prod": "NODE_ENV=production npm run build && npm run clean-logs && npm run clean-maps && npm run minify",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "./dev/scripts/release/release.sh patch",
    "release:minor": "./dev/scripts/release/release.sh minor",
    "release:major": "./dev/scripts/release/release.sh major",
    "prepublishOnly": "npm run build:prod && npm test",
    "fix-imports": "node dev/scripts/build/fix-imports.js",
    "clean-logs": "node dev/scripts/build/clean-logs.js",
    "clean-maps": "node dev/scripts/build/clean-maps.js",
    "minify": "node dev/scripts/build/minify.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "canvas",
    "image-viewer",
    "annotation",
    "zoom",
    "pan",
    "image-comparison",
    "typescript",
    "html5-canvas",
    "before-after",
    "image-annotation"
  ],
  "author": "koniz-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/koniz-dev/canvaslens.git"
  },
  "bugs": {
    "url": "https://github.com/koniz-dev/canvaslens/issues"
  },
  "homepage": "https://github.com/koniz-dev/canvaslens#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  }
}
