{
  "name": "@koniz-dev/canvaslens",
  "version": "0.0.8",
  "description": "A powerful HTML5 Canvas-based image viewing and annotation library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && npm run fix-imports",
    "build:prod": "tsc && npm run fix-imports && npm run remove-console-logs",
    "fix-imports": "node scripts/fix-imports.js",
    "remove-console-logs": "node scripts/remove-console-logs.js",
    "dev": "concurrently \"tsc --watch\" \"node server.js\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:silent": "jest --silent",
    "prepublishOnly": "npm run build:prod && npm test",
    "release": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "keywords": [
    "canvas",
    "image-viewer",
    "annotation",
    "zoom",
    "pan",
    "image-comparison",
    "typescript",
    "html5-canvas",
    "before-after",
    "image-annotation"
  ],
  "author": "CanvasLens Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/koniz-dev/canvaslens.git"
  },
  "bugs": {
    "url": "https://github.com/koniz-dev/canvaslens/issues"
  },
  "homepage": "https://github.com/koniz-dev/canvaslens#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  }
}
