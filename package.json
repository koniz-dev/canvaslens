{
  "name": "@koniz-dev/canvaslens",
  "version": "0.1.0",
  "type": "module",
  "description": "A powerful HTML5 Canvas-based image viewing and annotation library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src/__tests__/utils src/__tests__/core",
    "test:integration": "jest src/__tests__/integration",
    "test:performance": "jest src/__tests__/performance",
    "test:visual": "jest src/__tests__/visual",
    "test:api": "jest src/__tests__/api",
    "release": "semantic-release",
    "prepublishOnly": "npm run build:prod && npm run test",
    "clean": "rm -rf dist coverage",
    "prepare": "husky"
  },
  "keywords": [
    "canvas",
    "image-viewer",
    "annotation",
    "zoom",
    "pan",
    "image-comparison",
    "typescript",
    "html5-canvas",
    "before-after",
    "image-annotation"
  ],
  "author": "koniz-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/koniz-dev/canvaslens.git"
  },
  "bugs": {
    "url": "https://github.com/koniz-dev/canvaslens/issues"
  },
  "homepage": "https://github.com/koniz-dev/canvaslens#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "rollup": "^4.52.4",
    "semantic-release": "^24.2.9",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^10.0.0",
    "inflight": "npm:lru-cache@^10.0.0"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
